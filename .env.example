# Development Environment Variables
# Copy this file to .env and fill in your values

# Google Cloud Pub/Sub Configuration
GCP_PROJECT_ID=local-project
GCP_PUBSUB_TOPIC_ID=messages
GCP_PUBSUB_SUBSCRIPTION_ID=messages-sub

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# For development webhook setup (when using ngrok)
# Run ngrok with: ngrok http 8080
# Then copy the HTTPS URL here (e.g., https://a1b2c3d4.ngrok.io)
NGROK_URL=your_ngrok_url

# Service URLs (for development these should work as is)
BROKER_URL=http://message-broker:8080
API_GATEWAY_URL=http://api-gateway:8000
TELEGRAM_BOT_URL=http://telegram-bot:8080
AUTH_SERVICE_URL=http://auth-service:8000

# Internal API Key for service-to-service communication
INTERNAL_API_KEY=your-internal-api-key

# Supabase Configuration for Auth Service
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# JWT Configuration for Auth Service
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60